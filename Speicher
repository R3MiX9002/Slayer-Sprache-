# Deployment
terraform init
terraform apply -auto-approve

# main.tf
provider "aws" {
  region = var.aws_region
}

resource "aws_instance" "python_vm" {
  ami           = var.ami_id
  instance_type = "t3.small"

  # Root-Volume auf 4 GB setzen
  root_block_device {
    volume_size = 4
    volume_type = "gp3"
  }

  # Python-Installation
  user_data = <<-EOF
              #!/bin/bash
              apt-get update
              apt-get install -y python3 python3-pip
              EOF

  tags = {
    Name = "python-2gb-4gbssd"
  }
}

output "public_ip" {
  value = aws_instance.python_vm.public_ip
}